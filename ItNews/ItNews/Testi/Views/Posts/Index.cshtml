@model IEnumerable<Testi.Models.Post>

@{
    Layout = null;
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post_Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Post_Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post_Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Post_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Post_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Post_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
